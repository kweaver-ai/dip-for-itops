{{ if .Values.service.ingress }}
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  namespace:  {{.Values.namespace}}
  name: {{.Values.dipModule}}-{{ .Values.cluster }}-ingress
  annotations:
    #kubernetes.io/ingress.class: "nginx"
    nginx.ingress.kubernetes.io/rewrite-target: "/$1"
    nginx.ingress.kubernetes.io/ssl-redirect: "false"
spec:
{{- if .Values.service.ingressclassname }}
  ingressClassName: "{{.Values.service.ingressclassname}}"
{{- end }}
  rules:
  - http:
      paths:
   {{- range .Values.service.ingress }}
      - path: {{.path}}
        pathType: ImplementationSpecific
        backend:
          service:
            name: {{$.Values.dipModule}}-{{ $.Values.cluster }}
            port:
              number: {{.port}}
   {{- end}}

{{end}}
